// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  LAWYER
  CLIENT
}

enum CaseStatus {
  OPEN
  CLOSED
}

enum CaseCategory {
  CRIMINAL_LAW
  CIVIL_LAW
  CORPORATE_LAW
  FAMILY_LAW
  IMMIGRATION_LAW
  INTELLECTUAL_PROPERTY
  LABOR_LAW
  REAL_ESTATE
  TAX_LAW
  OTHER
}

enum DocumentStatus {
  PENDING
  PROCESSED
  ARCHIVED
  DELETED
}

enum DocumentType {
  CONTRACT
  EVIDENCE
  CORRESPONDENCE
  LEGAL_BRIEF
  COURT_FILING
  FINANCIAL
  IDENTIFICATION
  OTHER
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// Models
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  role         UserRole @default(CLIENT)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  ownedCases        Case[]                @relation("CaseOwner")
  accessibleCases   CaseAccess[]          @relation("LawyerAccess")
  accessRequests    CaseAccessRequest[]   @relation("LawyerAccessRequests")
  reviewedRequests  CaseAccessRequest[]   @relation("ReviewedAccessRequests")
  uploadedDocuments Document[]            @relation("DocumentUploader")
  sentMessages      Message[]             @relation("MessageSender")

  @@map("users")
  @@index([email])
  @@index([role])
}

model Case {
  id          String       @id @default(cuid())
  title       String
  description String?      @db.Text
  category    CaseCategory
  status      CaseStatus   @default(OPEN)
  priority    Int          @default(2) // 1=Low, 2=Medium, 3=High, 4=Urgent
  ownerId     String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  owner          User                  @relation("CaseOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  lawyerAccess   CaseAccess[]          @relation("CaseAccess")
  accessRequests CaseAccessRequest[]   @relation("CaseAccessRequests")
  documents      Document[]            @relation("CaseDocuments")
  messages       Message[]             @relation("CaseMessages")

  @@map("cases")
  @@index([ownerId])
  @@index([status])
  @@index([category])
  @@index([createdAt])
}

model CaseAccess {
  id        String   @id @default(cuid())
  caseId    String
  lawyerId  String
  grantedAt DateTime @default(now())

  // Relations
  case   Case @relation("CaseAccess", fields: [caseId], references: [id], onDelete: Cascade)
  lawyer User @relation("LawyerAccess", fields: [lawyerId], references: [id], onDelete: Cascade)

  @@unique([caseId, lawyerId])
  @@map("case_access")
  @@index([caseId])
  @@index([lawyerId])
}

model CaseAccessRequest {
  id          String        @id @default(cuid())
  caseId      String
  lawyerId    String
  status      RequestStatus @default(PENDING)
  requestedAt DateTime      @default(now())
  reviewedAt  DateTime?
  reviewedBy  String?       // User ID who approved/rejected

  // Relations
  case     Case  @relation("CaseAccessRequests", fields: [caseId], references: [id], onDelete: Cascade)
  lawyer   User  @relation("LawyerAccessRequests", fields: [lawyerId], references: [id], onDelete: Cascade)
  reviewer User? @relation("ReviewedAccessRequests", fields: [reviewedBy], references: [id])

  @@unique([caseId, lawyerId]) // One pending request per lawyer per case
  @@map("case_access_requests")
  @@index([caseId])
  @@index([lawyerId])
  @@index([status])
}

model Document {
  id           String         @id @default(cuid())
  caseId       String
  originalName String         // Original filename from user upload
  storedName   String         @unique // UUID-based secure filename
  relativePath String         // Relative path from storage root (no user control)
  size         Int            // File size in bytes
  mimeType     String         // Validated MIME type
  documentType DocumentType   @default(OTHER)
  status       DocumentStatus @default(PENDING)
  checksum     String?        // SHA-256 hash for integrity verification
  uploadedById String         // User who uploaded the document
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // Relations
  case       Case @relation("CaseDocuments", fields: [caseId], references: [id], onDelete: Cascade)
  uploadedBy User @relation("DocumentUploader", fields: [uploadedById], references: [id])

  @@map("documents")
  @@index([caseId])
  @@index([uploadedById])
  @@index([status])
  @@index([mimeType])
  @@index([documentType])
  @@index([createdAt])
}

model Message {
  id        String   @id @default(cuid())
  content   String   @db.Text
  caseId    String
  senderId  String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  case   Case @relation("CaseMessages", fields: [caseId], references: [id], onDelete: Cascade)
  sender User @relation("MessageSender", fields: [senderId], references: [id])

  @@map("messages")
  @@index([caseId])
  @@index([senderId])
  @@index([createdAt])
}
